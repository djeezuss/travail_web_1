$('.alert').hide();
<% if @success %>
$('.voiture_info_<%= @voiture.id %> > #voiture_marque').text('<%= @voiture.marque %>');
$('.voiture_info_<%= @voiture.id %> > #voiture_couleur').text('<%= @voiture.couleur %>');
$('.voiture_info_<%= @voiture.id %> > #voiture_annee').text('<%= @voiture.annee %>');
$('.voiture_info_<%= @voiture.id %>').toggle();
<% else %>
$('.alert-danger').html("")
    <% @error_msg.each do |msg| %>
    $('.alert-danger').append("<%= msg %> <br>")
    <% end %>
$('.alert-danger').show();
<% end %>