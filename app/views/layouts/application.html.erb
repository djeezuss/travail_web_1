<!DOCTYPE html>
<html>
  <head>
    <title>Travail Web 1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      <div style="inline; float:right;">
        <%= link_to 'Modifier profile', edit_user_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
        Connecté en tant que <strong><%= current_user.email %></strong>.
      </div>
      <%= link_to 'Accueil', root_path, :class => 'navbar-link' %>
    <% else %>
      <%= link_to "Inscription", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Connexion", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
    </p>
    <hr>

    <%= yield %>
  </body>
</html>
